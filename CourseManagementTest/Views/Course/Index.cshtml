@model IEnumerable<CourseManagementTest.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<h2>Courses</h2>

<p>
    <a href="@Url.Action("CreateOrEdit", "Course")" class="btn btn-primary">Create New Course</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Title</td>
                <td>@course.Description</td>
                <td>
                    <a href="@Url.Action("CreateOrEdit", "Course", new { id = course.CourseId })" class="btn btn-info">Edit</a>

                    <a href="@Url.Action("Delete", "Course", new { id = course.CourseId })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this course?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
