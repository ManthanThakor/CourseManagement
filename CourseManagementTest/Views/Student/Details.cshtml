@model CourseManagementTest.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Date of Birth</dt>
        <dd class="col-sm-10">@Model.DOB.ToString("MM/dd/yyyy")</dd>
    </dl>
</div>

<div>
    <a href="@Url.Action("Index", "Student")" class="btn btn-primary">Back to List</a>
</div>
