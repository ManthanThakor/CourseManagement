@model IEnumerable<CourseManagementTest.Models.Enrollment>

@{
    ViewData["Title"] = "Enrollments";
}

<h2>Enrollments</h2>

<p>
    <a href="@Url.Action("CreateOrEdit", "Enrollment")" class="btn btn-primary">Create New Enrollment</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Student Name</th>
            <th>Course Title</th>
            <th>Enrollment Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var enrollment in Model)
        {
            <tr>
                <td>@enrollment.Student.Name</td>
                <td>@enrollment.Course.Title</td>
                <td>@enrollment.EnrollmentDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <!-- Edit Link -->
                    <a href="@Url.Action("CreateOrEdit", "Enrollment", new { id = enrollment.EnrollmentId })" class="btn btn-info">Edit</a>

                    <!-- Delete Link -->
                    <a href="@Url.Action("Delete", "Enrollment", new { id = enrollment.EnrollmentId })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this enrollment?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
